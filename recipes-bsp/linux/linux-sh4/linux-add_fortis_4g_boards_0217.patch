+	stxh205_configure_ssc_i2c(STXH205_SSC(11), NULL);
+
+	/* SSC2: NIM: CN29 */
+	stxh205_configure_ssc_i2c(STXH205_SSC(2), &(struct stxh205_ssc_config) {
+			.routing.ssc2.sclk = stxh205_ssc2_sclk_pio9_4,
